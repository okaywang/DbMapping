<Window x:Class="DbMapping.Importing"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Importing" Height="471.553" Width="567.961">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <UniformGrid Columns="3">
            <Label Content="选择导入策略:" VerticalAlignment="Center"  Width="100"/>
            <ComboBox Name="ComboBox1" ItemsSource="{Binding Mappings}" HorizontalAlignment="Left" >
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding SourceTableName}" />
                            <TextBlock Text="-->" />
                            <TextBlock Text="{Binding TargetTableName}" />
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <Button Content="确定" Width="100" Click="Button_Click"/>
        </UniformGrid>
        <Grid Grid.Row="1">
            <ListView Name="ListView1" >
            </ListView>            
        </Grid>
        <Grid Grid.Row="2">
            <Button Content="导入目标库" Width="100" Height="30" HorizontalAlignment="Right"/>
        </Grid>
    </Grid>
</Window>
